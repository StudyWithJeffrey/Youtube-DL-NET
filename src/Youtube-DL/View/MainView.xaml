<UserControl
    x:Class="Youtube_DL.View.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="15"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="75" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="15,3,0,10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="Red"
                Text="Добавить видео" />


            <Grid Grid.Row="1" Margin="10,25,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Name="YoutubeUrls"
                    materialDesign:HintAssist.Hint="URL"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" />
                <Button
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Command="{Binding AddButton}"
                    CommandParameter="{Binding Text, ElementName=YoutubeUrls}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="MaterialDesignOutlinedButton">
                    <Grid>
                        <TextBlock Text="Добавить" Visibility="{Binding ButtonTextVisible}" />
                        <ProgressBar
                            IsIndeterminate="True"
                            Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Visibility="{Binding ButtonIsLoading}"
                            Value="0" />
                    </Grid>
                </Button>
            </Grid>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal" />
        </Grid>
        <Grid Grid.Column="1">
            <materialDesign:Card Background="Red" UniformCornerRadius="15">
                <Grid Margin="10,0">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">

                        <ItemsControl ItemsSource="{Binding MainVideoList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card
                                        Height="100"
                                        Margin="10,20"
                                        Background="White"
                                        UniformCornerRadius="15">
                                        <materialDesign:DialogHost>
                                            <materialDesign:DialogHost.DialogContent>
                                                <TextBlock Text="asdasd" />
                                            </materialDesign:DialogHost.DialogContent>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.6*" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0" Margin="6">
                                                    <Border
                                                        Name="Mask"
                                                        Background="Gray"
                                                        CornerRadius="13" />
                                                    <Grid>
                                                        <ProgressBar
                                                            IsIndeterminate="True"
                                                            Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                            Value="0" />
                                                        <Image
                                                            Name="Receiver"
                                                            Source="{Binding Image}"
                                                            Stretch="UniformToFill" />
                                                        <Grid.OpacityMask>
                                                            <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                        </Grid.OpacityMask>
                                                    </Grid>
                                                </Grid>

                                                <Grid Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Margin="10,10,5,5"
                                                        FontWeight="Bold"
                                                        Text="{Binding Title}"
                                                        TextAlignment="Left"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="Wrap" />
                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Margin="20,0"
                                                        HorizontalAlignment="Right"
                                                        Orientation="Horizontal">

                                                        <ComboBox Margin="0,0,20,0" ItemsSource="{Binding VideoResolution}" />
                                                        <Button
                                                            Content="Скачать"
                                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                                            ToolTip="MaterialDesignOutlinedButton" />
                                                    </StackPanel>

                                                </Grid>


                                            </Grid>
                                        </materialDesign:DialogHost>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <materialDesign:Snackbar Grid.Column="1" MessageQueue="{Binding Snackbar}" />
    </Grid>
</UserControl>