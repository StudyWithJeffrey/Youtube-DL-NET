<UserControl
    x:Class="Youtube_DL.View.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="15"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="15,3,0,10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="Red"
                Text="Добавить видео" />

            <Grid Grid.Row="1" Margin="10,10,25,10">
                <TextBox
                    x:Name="YoutubeUrls"
                    Height="240"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="URL"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

            </Grid>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Command="{Binding AddButton}"
                    CommandParameter="{Binding Text, ElementName=YoutubeUrls}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="MaterialDesignOutlinedButton">
                    <Grid>
                        <TextBlock Text="Добавить" Visibility="{Binding ButtonTextVisible}" />
                        <ProgressBar
                            IsIndeterminate="True"
                            Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Visibility="{Binding ButtonIsLoading}"
                            Value="0" />
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <materialDesign:Card Background="Red" UniformCornerRadius="15">
                <Grid Margin="20,0">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <materialDesign:Card
                                Height="100"
                                Margin="10,20"
                                Background="White"
                                UniformCornerRadius="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Margin="5"
                                        BorderBrush="Black"
                                        BorderThickness="8"
                                        CornerRadius="8">
                                        <Image Source="{Binding Image}" Stretch="Fill" />
                                    </Border>

                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />

                                </Grid>
                            </materialDesign:Card>
                        </StackPanel>

                        <!--<ItemsControl ItemsSource="{Binding MainVideoList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>-->
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <materialDesign:Snackbar Grid.Column="1" MessageQueue="{Binding Snackbar}" />
    </Grid>
</UserControl>